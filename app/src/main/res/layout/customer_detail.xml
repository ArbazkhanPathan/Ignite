<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/DarkBlueGray"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <TextView
                android:id="@+id/idCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:text="Name"
                android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idPhone"
            android:layout_below="@id/idCustomerName"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="Phone"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idEmail"
            android:layout_below="@id/idPhone"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="Email"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idBill"
            android:layout_below="@id/idEmail"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="BIll"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idremark"
            android:layout_below="@id/idBill"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="Remark"
            android:textColor="@color/white"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

